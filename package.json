{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bex",
  "title": "Bex",
  "description": "Better Expression â€” Check and improve English grammar with AI",
  "icon": "icon.png",
  "author": "choru",
  "license": "MIT",
  "commands": [
    {
      "name": "check-grammar",
      "title": "Check Grammar",
      "description": "Check and fix English grammar/expression",
      "mode": "view"
    },
    {
      "name": "history",
      "title": "Grammar History",
      "description": "Review past grammar corrections for study",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "provider",
      "title": "LLM Provider",
      "description": "Which AI to use for grammar checking",
      "type": "dropdown",
      "required": true,
      "data": [
        { "title": "OpenAI", "value": "openai" },
        { "title": "Claude", "value": "claude" },
        { "title": "Gemini", "value": "gemini" },
        { "title": "Ollama (Local)", "value": "ollama" }
      ],
      "default": "openai"
    },
    {
      "name": "openaiApiKey",
      "title": "OpenAI API Key",
      "description": "Your OpenAI API key",
      "type": "password",
      "required": false
    },
    {
      "name": "claudeApiKey",
      "title": "Claude API Key",
      "description": "Your Anthropic API key",
      "type": "password",
      "required": false
    },
    {
      "name": "geminiApiKey",
      "title": "Gemini API Key",
      "description": "Your Google Gemini API key",
      "type": "password",
      "required": false
    },
    {
      "name": "ollamaUrl",
      "title": "Ollama URL",
      "description": "Local Ollama server URL",
      "type": "textfield",
      "required": false,
      "default": "http://localhost:11434"
    },
    {
      "name": "model",
      "title": "Model Name",
      "description": "Model to use (leave empty for default)",
      "type": "textfield",
      "required": false,
      "placeholder": "gpt-4o-mini / claude-sonnet-4-20250514 / gemini-3-flash-preview / llama3.2"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.83",
    "@raycast/utils": "^1.17"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.4"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
